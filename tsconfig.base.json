{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDirs": ["."],
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-org/lib1": ["libs/lib1/src/index.ts"],
      "@my-org/lib2": ["libs/lib2/src/index.ts"],
      "@my-org/react-publishable-lib": [
        "libs/react-publishable-lib/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
